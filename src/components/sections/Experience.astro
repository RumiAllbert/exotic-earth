<style>
  [x-cloak] { display: none !important; }

  li::marker {
    @apply text-skin-hue
  }

  .timeline-fill {
    background: linear-gradient(180deg, #c4b5fd, #a78bfa, #8b5cf6);
    transition: height 0.1s linear;
    will-change: height;
    border-radius: 0 0 1px 1px;
  }

  .timeline-dot.lit {
    background-color: #a78bfa;
    ring-color: #a78bfa;
    box-shadow: 0 0 8px 2px rgba(167, 139, 250, 0.5);
  }

  .skill-item {
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .skill-item::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #3b82f6, #8b5cf6, #6366f1, #3b82f6);
    z-index: -1;
    filter: blur(8px);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .skill-item:hover {
    transform: scale(1.05) translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    color: #ffffff;
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
  }

  .skill-item:hover::before {
    opacity: .7;
    background-position: var(--x, 0) var(--y, 0);
    transition: background-position 0.3s ease;
  }
</style>

<script>
  document.querySelectorAll('.skill-item').forEach(item => {
    item.addEventListener('mousemove', ((e: MouseEvent) => {
      const rect = item.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      (item as HTMLElement).style.setProperty('--x', `${x}px`);
      (item as HTMLElement).style.setProperty('--y', `${y}px`);
    }) as EventListener);
  });

  // Timeline scroll-fill animation
  let initialOffset: number | null = null;
  let initialScrollY = 0;

  function updateTimeline() {
    const items = document.querySelectorAll('.timeline-item');
    if (!items.length) { requestAnimationFrame(updateTimeline); return; }

    const triggerY = window.scrollY + window.innerHeight * 0.75;

    // On first frame, measure how far the trigger already overshoots the section
    // This is the "head start" we need to zero out
    if (initialOffset === null) {
      const firstRect = items[0].getBoundingClientRect();
      const firstItemTop = window.scrollY + firstRect.top;
      initialOffset = Math.max(triggerY - firstItemTop, 0);
      initialScrollY = window.scrollY;
    }

    // Shrink the offset 1:1 as the user scrolls â€” ink catches up naturally
    const scrolled = Math.max(window.scrollY - initialScrollY, 0);
    const currentOffset = Math.max(initialOffset - scrolled, 0);
    const inkY = triggerY - currentOffset;

    items.forEach((item) => {
      const rect = item.getBoundingClientRect();
      const fill = item.querySelector('.timeline-fill') as HTMLElement;
      const dot = item.querySelector('.timeline-dot') as HTMLElement;
      if (!fill || !dot) return;

      const itemTop = window.scrollY + rect.top;
      const itemHeight = rect.height;

      const scrolledInto = inkY - itemTop;
      const progress = Math.min(Math.max(scrolledInto / itemHeight, 0), 1);

      fill.style.height = `${progress * 100}%`;

      if (progress > 0.05) {
        dot.classList.add('lit');
      } else {
        dot.classList.remove('lit');
      }
    });

    requestAnimationFrame(updateTimeline);
  }

  requestAnimationFrame(updateTimeline);
</script>